{
  "version": 2,
  "name": "aplysia-app-client",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "client/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_API_URL": "https://api.aplysia.app",
    "REACT_APP_WS_URL": "wss://api.aplysia.app/graphql"
  }
} 