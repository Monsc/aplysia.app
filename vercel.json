{
  "version": 2,
  "rootDirectory": "client",
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_API_URL": "https://api.aplysia.app",
    "REACT_APP_WS_URL": "wss://api.aplysia.app/graphql"
  }
} 